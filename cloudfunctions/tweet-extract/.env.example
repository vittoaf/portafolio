# .env.example
# Copia este archivo a .env y configura tus valores
# cp .env.example .env

# ═══════════════════════════════════════════════════════════
# GCP CONFIGURATION
# ═══════════════════════════════════════════════════════════

# ID del proyecto de GCP (REQUERIDO)
GCP_PROJECT_ID=your-project-id-here

# Región donde se desplegarán los recursos
GCP_REGION=us-central1

# Nombre de la service account
GCP_SERVICE_ACCOUNT_NAME=twitter-poller-sa

# ═══════════════════════════════════════════════════════════
# TWITTER API
# ═══════════════════════════════════════════════════════════

# Bearer Token de Twitter API v2 (REQUERIDO)
# Obtenerlo en: https://developer.twitter.com/en/portal/dashboard
TWITTER_BEARER_TOKEN=your_twitter_bearer_token_here

# Cuentas de Twitter a monitorear (separadas por comas, sin @)
TWITTER_ACCOUNTS="InvictosSomos;Juezcentral;2010MisterChip"

# ═══════════════════════════════════════════════════════════
# CLOUD FUNCTION CONFIGURATION
# ═══════════════════════════════════════════════════════════

FUNCTION_NAME=twitter-poller
FUNCTION_MEMORY=512MB
FUNCTION_TIMEOUT=540s
FUNCTION_MAX_INSTANCES=1

# ═══════════════════════════════════════════════════════════
# CLOUD SCHEDULER CONFIGURATION
# ═══════════════════════════════════════════════════════════

SCHEDULER_JOB_NAME=twitter-poller-job-dom-jue
SCHEDULER_TIMEZONE="America/Bogota"
SCHEDULER_CRON="0 6-22/2 * * 0-4"

SCHEDULER_JOB_NAME_02=twitter-poller-job-vie
SCHEDULER_CRON_02="0 5-17/2 * * 5"

# ═══════════════════════════════════════════════════════════
# FILTROS DE TWEETS
# ═══════════════════════════════════════════════════════════

MIN_CHARACTERS=200
MIN_LIKES=1000